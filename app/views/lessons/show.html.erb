<div class="row">
    <div class="col-lg-6 offset-3">
        <h1><%= @lesson.category.title%></h1>
        <hr/>

        <table class="table table-stripped">
            <thead>
                <th>Question</th>
                <th>Correct Answer</th>
                <th>Your Answer</th>
                <th></th>
            <thead>
            <tbody>
                <% @lesson.answers.each do |answer| %>
                    <tr>
                        <td><%= answer.question.content %></td>
                        <td><%= answer.question.correct_answer.content %></td>
                        <td><%= answer.choice.content %></td>
                        <td>
                            <% if answer.choice.correct? %>
                                <i class="fa fa-check" aria-hidden="true"></i>
                            <% else %>
                                <i class="fa fa-times" aria-hidden="true"></i>
                            <% end %>    
                        </td>
                    </tr>
                <% end %>       
            </tbody>
        </table>
    </div>
</div>
